// Style using Bespoke Classes: https://github.com/markdalgleish/bespoke-classes

.bespoke-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  transition: all 0.3s ease, background 0.6s ease
  perspective: 600px
  &.primary
    background: primary
    color: #333333

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  width: slide_width
  height: slide_height
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  transition:
    transform slide_transition_length slide_transition_easing,
    opacity slide_transition_length slide_transition_easing,
    background slide_transition_length slide_transition_easing
  transform-origin: 50% 50% 0
  transform: translate3d(0, 0, 0)
  backface-visibility: hidden

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-active
  opacity: 1
  transition-delay: 0.2s

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none
  li&
    transform: translateX(-10px) translateZ(-10px) rotateY(20deg)

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .8vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: darken(primary, 20%)
  transition: width .6s ease

.bespoke-before
  transform: translateX(slide_transition_nudge_x * -1) translateX(slide_width / -2) rotateY(slide_transition_rotate_y * -1) translateX(slide_width / -2)

.bespoke-after
  transform: translateX(slide_transition_nudge_x) translateX(slide_width / 2) rotateY(slide_transition_rotate_y) translateX(slide_width / 2)

.emphatic
  background: #222222

.emphatic-text
  color: #FFFFFF
